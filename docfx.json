{
  "build": {
    "content": [
      {
        "files": [ "install/**/*.md", "*.md", "toc.yml", "remove/**/*.md", "use/**/*.md" ]
      }
    ],
    "resource": [
      {
        "files": [ "install/images/**", "remove/images/**", "use/images/**"]
      }
    ],
    "globalMetadata": {
      "_appTitle": "zPlanner Documentation",
      "_enableSearch": true,
      "_appLogoPath": "zplannerlogo.png",
      "_appFaviconPath": "favicon.png"
    },
    "markdownEngineName": "markdig",
    "dest": "_site",
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ]
  }
}
