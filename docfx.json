{
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "src": "obj/api",
        "dest": "api"
      },
      {
        "files": [ "install/**/*.md", "*.md", "toc.yml", "remove/**/*.md", "use/**/*.md" ]
      }
    ],
    "resource": [
      {
        "files": [ "install/images/**", "remove/images/**", "use/images/**"]
      }
    ],
    "globalMetadata": {
      "_appTitle": "zPlanner Documentation",
      "_enableSearch": true
    },
    "markdownEngineName": "markdig",
    "dest": "_site",
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ]
  }
}
